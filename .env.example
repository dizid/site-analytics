# Google OAuth 2.0 (from GCP Console > APIs & Services > Credentials)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx

# JWT signing secret (generate: openssl rand -hex 32)
JWT_SECRET=your-random-64-char-hex-string

# Site URL (no trailing slash)
SITE_URL=http://localhost:5173

# Email allowlist (comma-separated, empty = allow all authenticated users)
ALLOWED_EMAILS=user@gmail.com
